            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-question-circle nav-icon"></i>
                    Help & Support
                </a>
            </li>
        </ul>
        
        <div class="user-info">
            <div class="user-avatar">
                <i class="fas fa-user"></i>
            </div>
            <div>
                <p style="font-weight: 600;">John Doe</p>
                <p style="color: var(--gray); font-size: 0.9rem;">Admin</p>
            </div>
        </div>
    </aside>
    
    <!-- Main Content -->
    <main class="main-content">
        <!-- Header -->
        <div class="header">
            <h1>Dashboard Overview</h1>
            
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search...">
            </div>
            
            <div class="user-actions">
                <div class="notification">
                    <i class="fas fa-bell"></i>
                    <div class="notification-badge">3</div>
                </div>
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="stats-container">
            <div class="stat-card stat-1">
                <div class="stat-info">
                    <h3>Total Revenue</h3>
                    <p>$24,580</p>
                    <p style="color: var(--primary); font-size: 0.9rem;">+12.5% from last month</p>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
            
            <div class="stat-card stat-2">
                <div class="stat-info">
                    <h3>New Orders</h3>
                    <p>1,245</p>
                    <p style="color: var(--secondary); font-size: 0.9rem;">+8.2% from last month</p>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
            </div>
            
            <div class="stat-card stat-3">
                <div class="stat-info">
                    <h3>Active Users</h3>
                    <p>3,254</p>
                    <p style="color: var(--success); font-size: 0.9rem;">+5.7% from last month</p>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
            
            <div class="stat-card stat-4">
                <div class="stat-info">
                    <h3>Conversion Rate</h3>
                    <p>4.7%</p>
                    <p style="color: var(--warning); font-size: 0.9rem;">-1.2% from last month</p>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-chart-pie"></i>
                </div>
            </div>
        </div>
        
        <!-- Charts and Recent Orders -->
        <div class="content-grid">
            <div class="chart-container">
                <div class="section-header">
                    <h2>Sales Overview</h2>
                    <a href="#" class="view-all">View Details</a>
                </div>
                <div class="chart-placeholder">
                    <div style="text-align: center;">
                        <i class="fas fa-chart-bar" style="font-size: 3rem; margin-bottom: 15px; color: #ccc;"></i>
                        <p>Sales chart would be displayed here</p>
                    </div>
                </div>
            </div>
            
            <div class="recent-orders">
                <div class="section-header">
                    <h2>Recent Orders</h2>
                    <a href="#" class="view-all">View All</a>
                </div>
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#ORD-7821</td>
                            <td>John Smith</td>
                            <td>$245.99</td>
                            <td><span class="status status-completed">Completed</span></td>
                        </tr>
                        <tr>
                            <td>#ORD-7822</td>
