<%-include("navbar.ejs")%>

<div class="contener-flued bg-white p-4">
    <h1>Add Categary</h1>
    <form action="/admin/categary" method="post">
    <div class="row">
        <div class="col-md-9 mt-4">
         Categary Name
         <input type="text" class="form-control" name="categary_name">
        </div>
        <div class="col-md-3 mt-5 text-center">
         <Button class="btn btn-primary">Add Categary</Button>
        </div>
    </div>
    </form>
</div>


<div class="contener-fliud bg-white p-4 mt-4">
    <h1>Categary List</h1>
    <div class="row">
        <div class="col-md-12 mt-4">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Action</th>
                    <th>Sr.No</th>
                    <th>Categary Name</th>
                </tr>
                <%categary.map(function(val,i){%>
                    <tr>
                        <td>
                            <a href="/admin/delete_categary/<%=val.categary_id%>"
                                class="btn btn-danger mt-2">
                                <i class="fa-sharp fa-solid fa-trash"></i>
                            </a>
                            <a href="/admin/edit_categary/<%=val.categary_id%>"
                                class="btn btn-primary mt-2 ms-2">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=val.categary_name%></td>
                    </tr>
                <%})%>
            </table>
        </div>
    </div>
</div>
<%-include("footer.ejs")%>