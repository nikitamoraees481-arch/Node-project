<%-include("navbar.ejs")%>

<div class="contener-fliud bg-white p-4">
    <h1>Add Slider</h1>
    <form action="/admin/slider" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4 mt-4">
            Enter Title 
            <input type="text" class="form-control" name="title" id="">
        </div>
        <div class="col-md-8 mt-4">
            Enter Details
            <input type="text" class="form-control" name="details" id="">
        </div>
        <div class="col-md-4 mt-4">
            Button Text
            <input type="text" class="form-control" name="btn_text" id="">
        </div>
        <div class="col-md-4 mt-4">
            Button Url
            <input type="text" class="form-control" name="btn_url" id="">
        </div>
        <div class="col-md-4 mt-4">
           Slider Image
            <input type="file" class="form-control" name="slider_image" id="">
        </div>
        <div class="col-md-12 text-center mt-4">
           <button type="submit" class="btn btn-primary">Add Slider</button>
        </div>
    </div>
    </form>
</div>



<div class="contener-fliud bg-white p-4 mt-4">
    <h1>Slider List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
    <tr>
        <th>Action</th>
        <th>Sr.No</th>
        <th>Title</th>
        <th>Details</th>
        <th>Button Text</th>
        <th>Button URL</th>
        <th>Slider Image</th>
    </tr>
    <%slider.map(function(item,i){%>
        <tr>
            <td>
                 <a href="/admin/delete_slider/<%= item.id %>"
                      class="btn btn-danger mt-3">
                     <i class="fa-sharp fa-solid fa-trash"></i>
                </a>
                <a href="/admin/edit_slider/<%= item.id %>"
                      class="btn btn-primary mt-2">
                     <i class="fa-solid fa-pen-to-square"></i>
                </a>
            <td><%=i+1%></td>
            <td><%=item.title%></td>
            <td><%=item.details%></td>
            <td><%=item.btn_text%></td>
            <td>
                <a href="<%=item.btn_url%>">Click Url</a>
            </td>
            <td>
                <img src="/<%=item.slider_image%>">
            </td>
        </tr>
    <%})%>
</table>
        </div>
    </div>
</div>

<%-include("footer.ejs")%>



