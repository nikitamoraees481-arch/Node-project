 <%-include("navbar.ejs")%>

<div class="container-fluid p-3 bg-white">
    <h1>Product List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-sm table-bordered">
                <tr class="text-center">
                    <th>Action</th>
                    <th>Sr.No</th>
                    <th> name</th>
                    <th> Company</th>
                    <th> lable</th>
                    <th> color</th>
                    <th> Price</th>
                    <th> image</th>
                </tr>
                <%product_info.map(function(val,i) { %>
                    <tr>
                        <td>
                            <a class="btn btn-danger" href="/admin/delete_product/<%=val.product_id%>" class="form-control">
                               <i class="fa-sharp fa-solid fa-trash"></i>
                            </a>
                            <a class="btn btn-success" href="/admin/view_product/<%=val.product_id%>" class="form-control">
                              <i class="fa-jelly-fill fa-regular fa-eye"></i>
                            </a>
                            <a  class="btn btn-primary" href="/admin/edit_product/<%=val.product_id%>" class="form-control">
                               <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            
                        </td>
                        <td><%=i+1%></td>
                        <td><%=val.product_name%></td>
                        <td><%=val.product_company%></td>
                        <td><%=val.product_lable%></td>
                        <td><%=val.product_color%></td>
                        <td>&#8377;<%=val.product_price%> - &#8377;<%=val.dublicate_price%></td>
                        <td>
                            <img src="/upload/<%=val.product_image1%>" alt="image" height="100px" width="100px">
                        </td>
                    </tr>
                    
                <% }) %>
            </table>
        </div>
    </div>
</div>
<%-include("footer.ejs")%>