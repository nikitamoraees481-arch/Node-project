 <%-include("navbar")%>
<h2 class="cart-title">Shopping Cart</h2>
<div class="containear-fliud">
    <div class="row">
    <div class="col-md-12">
<div class="cart-wrapper">
    <table class="cart-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Size</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>

            <% var sum = 0; %>
          <%cart.map(function(val,i){%>
                <tr>
                <td>
                    <img src="/upload/<%=val.product_image1%>" style="height: 150px; width: 150px;" class="cart-img">
                </td>
                <td><%=val.product_name%></td>
                <td><%=val.product_size%></td>
                <td>
                    <button onclick="decrease('<%=val.cart_id%>')" style="background-color: blue;"><b>-</b></button>
                    <input type="number" value="<%=val.qty%>" min="1" class="qty-box">
                    <button onclick="increase('<%=val.cart_id%>')" style="background-color: blue;"><b>+</b></button>
                </td>
                <td>₹<%=val.product_price%></td>
                <td>₹<%=val.product_price * val.qty%></td>
                <td><a href="/cart_delete/<%=val.cart_id%>"><i class="fa-sharp fa-solid fa-trash" style="color: red;font-size: 25px;"></i></a></td>
            </tr>
            <% sum += (val.product_price * val.qty ) %>

            <%})%>

        </tbody>
    </table>
</div>
</div>

 <div class="col-md-12" style="margin-top: 20px;">
    <div class="cart-summary">
           <h3>Grand Total : ₹<%=sum%></h3> 
           <button class="checkout-btn"><a href="/checkout">PROCEED TO CHECKOUT</a></button>
    </div>
 </div>
</div>


<script>
    function increase(cart_id){
       var url = '/qtyincrease/'+cart_id;
       location.href = url ;   
    }

    function decrease(cart_id){
       var url = '/decrease/'+cart_id;
       location.href = url ;   
    }
</script>

<style>
    body {
    font-family: Arial, sans-serif;
    background: #f2f2f2;
    padding: 30px;
}

.cart-title {
    margin-bottom: 15px;
}

.cart-wrapper {
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    overflow: hidden;
}

.cart-table {
    width: 100%;
    border-collapse: collapse;
}

.cart-table thead {
    background: #333;
    color: #fff;
}

.cart-table th,
.cart-table td {
    padding: 12px;
    text-align: center;
    font-size: 14px;
    border-bottom: 1px solid #e5e5e5;
}

.cart-table tr:last-child td {
    border-bottom: none;
}

.cart-img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.qty-box {
    width: 80px;
    padding: 4px;
    text-align: center;
}

.remove {
    color: #777;
    cursor: pointer;
}

.remove:hover {
    color: red;
}

/* Bottom Summary */
.cart-summary {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 20px;
    padding: 15px 20px;
    border-top: 1px solid #ddd;
}

.checkout-btn {
    background: #28a745;
    color: white;
    border: none;
    padding: 10px 18px;
    font-size: 14px;
    border-radius: 4px;
    cursor: pointer;
}

.checkout-btn:hover {
    background: #218838;
}

</style>
<%-include("footer")%> 


